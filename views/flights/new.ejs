<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/new.css" />
<%- include('../partials/nav') %>
<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="airline-input">Airline:</label>
    <input type="text" name="airline" id="airline-input">
    <select name="airport" id="airport-select">
      <option value="DEN" selected>DEN</option>
      <option value="DAL">DAL</option>
      <option value="MCO">MCO</option>
      <option value="LAX">LAX</option>
    </select>
    <label for="flightNo-input">Flight Number:</label>
    <input type="text" name="flightNo" id="flightNo-input">
    <label for="departs-input">Departs:</label>
    <input type="datetime-local" name="departs" id="depart-input">
    <button type="submit">Add Flight</button>
  </form>
</main>
<%- include("../partials/footer") %>